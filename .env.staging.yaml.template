# Staging Environment Variables Template
# Copy this to .env.staging.yaml and fill in actual values
# DO NOT commit .env.staging.yaml to git!

# Core Services - Can use same as production or separate staging instances
WEAVIATE_URL: "https://your-staging-instance.weaviate.cloud"
WEAVIATE_API_KEY: "your-staging-weaviate-api-key"
WEAVIATE_CLASS_NAME: "Product"
HUGGINGFACE_API_KEY: "hf_your-huggingface-key"
ELEVENLABS_API_KEY: "sk_your-elevenlabs-key"
GROQ_API_KEY: "gsk_your-groq-key"

# LangSmith Tracing - Separate project for staging
LANGCHAIN_TRACING_V2: "true"
LANGCHAIN_API_KEY: "lsv2_pt_your-langchain-key"
LANGCHAIN_PROJECT: "leafandloaf-staging"
LANGCHAIN_ENDPOINT: "https://api.smith.langchain.com"

# Environment Settings
ENVIRONMENT: "staging"
FAST_MODE: "false"
TEST_MODE: "false"

# Spanner Configuration for Graphiti - Staging instances
SPANNER_INSTANCE_ID: "leafloaf-graphiti-staging"
SPANNER_DATABASE_ID: "graphiti-memory-staging"
GOOGLE_CLOUD_PROJECT: "leafloafai"

# GCP Settings
GCP_PROJECT_ID: "leafloafai"
GCP_LOCATION: "us-central1"

# Vertex AI Gemma Endpoint - Can use same as production
VERTEX_AI_ENDPOINT_ID: "your-endpoint-id"
VERTEX_AI_ENDPOINT_RESOURCE_NAME: "projects/xxx/locations/us-central1/endpoints/xxx"

# Redis Settings - Staging Redis if available
REDIS_ENABLED: "false"
REDIS_URL: ""

# Feature flags for staging
ENABLE_EXPERIMENTAL_FEATURES: "true"
LOG_LEVEL: "debug"

# These are required by the code but not used
OPENAI_API_KEY: "not-used"
ANTHROPIC_API_KEY: "not-used"
TAVILY_API_KEY: "not-used"