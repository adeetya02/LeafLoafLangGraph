FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (exclude test files)
COPY src/ src/
COPY database/ database/
COPY config/ config/
COPY *.py ./
# Copy .env.production.yaml if it exists (optional)
COPY .env.production.yaml* ./

# Set default environment variables (override with Cloud Run env vars)
ENV PORT=8080
ENV PYTHONPATH=/app

# Production defaults (can be overridden)
ENV ENVIRONMENT=production
ENV FAST_MODE=false
ENV TEST_MODE=false

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:8080/health')"

# Run the application
CMD ["python", "run.py"]